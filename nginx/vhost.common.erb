location ~ ^/assets/ {
  expires max;
  gzip_static on;
  add_header Cache-Control public;
  add_header Last-Modified "";
  add_header ETag "";
  break;
}

location ~* \.(js|css|jpe?g|png|gif|ico|eot|woff|ttf|swf)$ {
  if ($request_uri ~ "\?[0-9]+$") {
    expires max; # cache timestamped assets forever...
    break;
  }
  if ($request_uri !~ "\?[0-9]+$") {
    expires 1d; # ...and others for 1 day
    break;
  }
}

error_page 503 /maintenance.html;
location /maintenance.html { return 503; }

try_files $uri/index.html $uri.html $uri /maintenance.html /browser.html @app;

# POSTs are intended for the app, not cached pages. We use '=' to let @app set the response code.
error_page 405 = @app;

