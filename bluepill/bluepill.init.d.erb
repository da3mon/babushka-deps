#! /bin/sh
### BEGIN INIT INFO
# Provides:          bluepill
# Required-Start:
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: bluepill daemon to monitor important processes
# Description:       https://github.com/arya/bluepill
### END INIT INFO

# Author: Tom Sommer

export PATH="/usr/local/bin:$PATH"
 
# Check for missing binaries
BABUSHKA_BIN=/usr/local/bin/babushka
test -x $BABUSHKA_BIN || { echo "$BABUSHKA_BIN not installed";
        if [ "$1" = "stop" ]; then exit 0;
        else exit 5; fi; }

case "$1" in
  start)
    echo -n "Starting bluepill "
    sudo -u <%= username %> $BABUSHKA_BIN 'tsommer:start-bluepill.task' --update
    ;;
  stop)
    echo -n "Shutting down bluepill "
    sudo -u <%= username %> $BABUSHKA_BIN 'tsommer:stop-bluepill.task' --update
    ;;
  restart)
    ## Stop the service and regardless of whether it was
    ## running or not, start it again.
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

